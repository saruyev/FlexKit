{
  "FlexKit": {
    "Logging": {
      "AutoIntercept": true,
      "DefaultFormatter": "CustomTemplate",
      "DefaultTarget": "Console",
      "MaxBatchSize": 1,
      "BatchTimeout": "00:00:01",
      "EnableFallbackFormatting": true,
      "FallbackTemplate": "Method {TypeName}.{MethodName} - Status: {Success}",

      "Services": {
        "FlexKitLoggingConsoleApp.UserService": {
          "LogBoth": true,
          "Level": "Information",
          "Target": "Console",
          "Formatter": "Json",
          "MaskParameterPatterns": ["*email*", "*phone*"],
          "MaskPropertyPatterns": ["Email", "PhoneNumber"],
          "MaskReplacement": "[PII_REMOVED]"
        },
        "FlexKitLoggingConsoleApp.ConfigurationService": {
          "LogInput": true,
          "Level": "Warning",
          "Target": "Console",
          "Formatter": "Json",
          "MaskParameterPatterns": ["*password*", "*secret*", "*key*"],
          "MaskReplacement": "[CONFIG_HIDDEN]"
        },
        "FlexKitLoggingConsoleApp.*": {
          "LogInput": true,
          "Level": "Information",
          "ExcludeMethodPatterns": ["Get*", "*Cache*", "ToString", "GetHashCode", "Equals"]
        }
      },

      "Targets": {
        "Console": {
          "Type": "Console",
          "Enabled": true,
          "Properties": {
            "IncludeScopes": true,
            "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff",
            "FormatterType": "Simple"
          }
        },
        "Debug": {
          "Type": "Debug",
          "Enabled": true,
          "Properties": {
            "LogLevel": "Debug"
          }
        }
      },

      "Templates": {
        "FormattingService": {
          "SuccessTemplate": "🎨 FORMATTER: {MethodName} completed with {Formatter} formatter → {OutputValue}",
          "ErrorTemplate": "💥 FORMATTER FAILED: {MethodName} | {ExceptionType}: {ExceptionMessage}"
        },
        "PaymentService": {
          "SuccessTemplate": "💰 PAYMENT: {MethodName} completed in {Duration}ms → {OutputValue}",
          "ErrorTemplate": "💥 PAYMENT FAILED: {MethodName} | {ExceptionType}: {ExceptionMessage}"
        },
        "ComplexService": {
          "SuccessTemplate": "🔧 WORKFLOW: {MethodName} step completed → {OutputValue}",
          "ErrorTemplate": "⚠️ WORKFLOW FAILED: {MethodName} | {ExceptionMessage}"
        },
        "ExceptionTestStart": {
          "SuccessTemplate": "🚀 STARTING: {MethodName} with input: {InputParameters}",
          "ErrorTemplate": "💥 STARTUP FAILED: {MethodName} | {ExceptionMessage}"
        }
      },

      "Formatters": {
        "Json": {
          "PrettyPrint": false,
          "IncludeTimingInfo": true,
          "CustomPropertyNames": {
            "MethodName": "method_name",
            "Duration": "execution_time_ms"
          }
        },
        "Hybrid": {
          "MessageTemplate": "Method {MethodName} completed",
          "MetadataSeparator": " | META: "
        },
        "CustomTemplate": {
          "StrictValidation": true,
          "CacheTemplates": true,
          "DefaultTemplate": "Method {TypeName}.{MethodName} executed with success: {Success}",
          "ServiceTemplates": {
            "FormattingService": "FormattingService",
            "PaymentService": "PaymentService",
            "ComplexService": "ComplexService"
          }
        }
      }
    }
  }
}