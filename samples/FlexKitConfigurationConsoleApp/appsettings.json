{
  "Application": {
    "Name": "FlexKit Configuration Console App",
    "Version": "1.0.0",
    "Mapping": {
      "Prefix": "FlexKitConfigurationConsoleApp"
    }
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=FlexKitDemo;Integrated Security=true;",
    "CommandTimeout": 30,
    "MaxRetries": 3,
    "Providers": {
      "Primary": {
        "Host": "localhost",
        "Port": 5432,
        "Database": "primary_db"
      },
      "Secondary": {
        "Host": "backup.example.com",
        "Port": 5433,
        "Database": "secondary_db"
      },
      "flexkit": {
        "Host": "json-db.example.com",
        "Port": 5432,
        "Database": "flexkit_json"
      },
      "appconfig": {
        "Host": "override-by-appconfig",
        "Port": 5432,
        "Database": "appconfig_db"
      }
    }
  },
  "Api": {
    "BaseUrl": "https://api.example.com",
    "Timeout": 30000,
    "RetryCount": 3,
    "EnableLogging": true,
    "Features": {
      "Caching": true,
      "Compression": false,
      "Authentication": {
        "Type": "Bearer",
        "TokenExpiry": 3600
      }
    }
  },
  "Servers": [
    {
      "Name": "Web Server 1",
      "Host": "web1.example.com",
      "Port": 8080,
      "IsActive": true
    },
    {
      "Name": "Web Server 2", 
      "Host": "web2.example.com",
      "Port": 8081,
      "IsActive": false
    },
    {
      "Name": "API Server",
      "Host": "api.example.com",
      "Port": 8090,
      "IsActive": true
    }
  ],
  "Features": {
    "EnableNewDashboard": true,
    "MaxConcurrentUsers": 1000,
    "CacheExpiryMinutes": 60,
    "AllowedHosts": "localhost,127.0.0.1,*.example.com"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "File": {
      "Path": "logs/app.log",
      "MaxSizeBytes": 10485760,
      "MaxFiles": 5
    }
  },
  "Azure": {
    "KeyVault": {
      "VaultUri": "https://flexkittestkv1757629870.vault.azure.net/",
      "Optional": true,
      "JsonProcessor": true,
      "JsonProcessorSecrets": ["flexkit--features--config", "flexkit--api--config"],
      "ReloadIntervalMinutes": 5
    },
    "AppConfiguration": {
      "ConnectionString": "https://flexkit-test-config-1757629946.azconfig.io",
      "Optional": true,
      "KeyFilter": "flexkit:*",
      "Label": "development",
      "JsonProcessor": true,
      "ReloadIntervalMinutes": 3
    }
  },
  "ServiceConfiguration": {
    "EmailService": {
      "SmtpHost": "smtp.example.com",
      "SmtpPort": 587,
      "EnableSsl": true,
      "FromAddress": "noreply@example.com"
    },
    "PaymentService": {
      "Provider": "Stripe",
      "Timeout": 15000,
      "RetryAttempts": 2
    }
  }
}