{
  "Application": {
    "Environment": "Development",
    "Url": "https://localhost:5001",
    "MaintenanceMode": false
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FlexKitTest_Dev;Trusted_Connection=true;TrustServerCertificate=true;",
    "Redis": "localhost:6379",
    "MongoDB": "mongodb://localhost:27017/flexkit-test-dev"
  },
  "Database": {
    "EnableLogging": true,
    "LogSensitiveData": true,
    "CommandTimeout": 120
  },
  "External": {
    "PaymentApi": {
      "BaseUrl": "https://api-dev.payment.com/v2",
      "ApiKey": "dev-payment-api-key-12345",
      "Timeout": 30000
    },
    "NotificationApi": {
      "BaseUrl": "https://api-dev.notifications.com/v1",
      "ApiKey": "dev-notification-api-key-67890",
      "Timeout": 15000
    },
    "WeatherApi": {
      "BaseUrl": "https://api-dev.weather.com/v3",
      "ApiKey": "dev-weather-api-key-11111",
      "Timeout": 20000
    }
  },
  "Features": {
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "BetaFeatures": true,
    "EnableDarkMode": true,
    "EnableRealTimeNotifications": true,
    "EnableFileUpload": true,
    "MaxUploadSize": 52428800,
    "MaxConcurrentConnections": 100
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "FlexKit": "Trace"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "[HH:mm:ss] "
    },
    "File": {
      "Path": "./logs/flexkit-dev.log",
      "MaxFileSize": "10MB",
      "MaxFiles": 5
    }
  },
  "Security": {
    "JwtSettings": {
      "SecretKey": "development-jwt-secret-key-for-local-testing-only-not-secure",
      "ExpirationMinutes": 1440,
      "RefreshTokenExpirationDays": 30
    },
    "Cors": {
      "AllowedOrigins": [
        "https://localhost:5001",
        "https://localhost:3000",
        "http://localhost:3000",
        "https://localhost:8080"
      ]
    },
    "RateLimiting": {
      "MaxRequests": 1000,
      "WindowMinutes": 1
    },
    "PasswordPolicy": {
      "MinLength": 4,
      "RequireDigit": false,
      "RequireUppercase": false,
      "RequireSpecialChar": false
    },
    "SessionTimeout": 120,
    "EnableTwoFactor": false
  },
  "Cache": {
    "Type": "Memory",
    "DefaultExpiration": 300,
    "MaxSize": "50MB"
  },
  "MessageQueue": {
    "Type": "InMemory",
    "MaxRetries": 5,
    "RetryDelay": 500
  },
  "Monitoring": {
    "ApplicationInsights": {
      "InstrumentationKey": "",
      "ConnectionString": ""
    },
    "Metrics": {
      "Enabled": true,
      "CollectionInterval": 10
    },
    "Tracing": {
      "Enabled": true,
      "ServiceName": "FlexKit.Configuration.Tests.Dev"
    },
    "HealthChecks": {
      "Enabled": true,
      "Interval": 30,
      "Timeout": 5
    },
    "Prometheus": {
      "Enabled": true,
      "Port": 9090
    }
  },
  "Servers": [
    {
      "Name": "Local",
      "Host": "localhost",
      "Port": 5001,
      "Ssl": true,
      "HealthCheckPath": "/health"
    }
  ]
}